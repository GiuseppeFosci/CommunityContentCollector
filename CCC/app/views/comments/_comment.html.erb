<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  <span class="user-c"><%= link_to comment.user.name, comment.user %> <%= link_to comment.user.surname, comment.user %>
  </span>
  <span class="content", style="word-wrap: break-word">
    <%= comment.content %>
  </span>
  <span class="timestamp">Posted <%= time_ago_in_words(comment.created_at) %> ago.
  <% if current_user?(comment.user) %>
    <%= link_to "Elimina", comment, data: { "turbo-method": :delete, turbo_confirm: "Sei sicuro?" } %>
  <% end %>
  </span>
</li>
