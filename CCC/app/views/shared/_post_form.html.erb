<%= form_with(model: @post) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.select(:category, [["Ingegneria", "Ingegneria"], ["Economia", "Economia"]]) %> 
      <%= f.text_area :content, placeholder: "Crea nuovo post" %>
    </div>

    <%= f.submit "Post", class: "btn btn-primary" %>
    <span class="file">
      <%= f.file_field :files, :multiple => true, accept: "application/pdf, application/msword, text/x-python, text/x-c++src, text/x-java-source, text/x-ruby" %>
    </span>
<% end %>
